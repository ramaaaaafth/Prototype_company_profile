<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#00D4A3">


    <View
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:background="@drawable/school" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="130dp">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/layout_bg">

                    <ImageView
                        android:id="@+id/gbr1"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="25dp"
                        android:src="@drawable/education1" />

                    <TextView
                        android:id="@+id/myImageViewText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/gbr1"
                        android:layout_alignRight="@+id/gbr1"
                        android:layout_alignBottom="@+id/gbr1"
                        android:layout_marginRight="0dp"
                        android:fontFamily="@font/mistral"
                        android:gravity="center"
                        android:text="PROFIL"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/layout_bg">

                    <ImageView
                        android:id="@+id/gbr2"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/division" />

                    <TextView
                        android:id="@+id/myImageViewText1"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/gbr2"
                        android:layout_alignTop="@+id/gbr2"
                        android:layout_alignRight="@+id/gbr2"
                        android:layout_alignBottom="@+id/gbr2"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/mistral"
                        android:gravity="center"
                        android:text="GURU DAN STAFF"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/layout_bg">

                    <ImageView
                        android:id="@+id/gbr3"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingBottom="25dp"
                        android:src="@drawable/achievement" />

                    <TextView
                        android:id="@+id/myImageViewText2"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_alignLeft="@+id/gbr3"
                        android:layout_alignTop="@+id/gbr3"
                        android:layout_alignRight="@+id/gbr3"
                        android:layout_alignBottom="@+id/gbr3"
                        android:layout_marginTop="93dp"
                        android:layout_marginRight="0dp"
                        android:fontFamily="@font/mistral"
                        android:gravity="center"
                        android:text="PRESTASI"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/layout_bg">

                    <ImageView
                        android:id="@+id/gbr4"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:adjustViewBounds="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/gallery" />

                    <TextView
                        android:id="@+id/myImageViewText3"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/gbr4"
                        android:layout_alignTop="@+id/gbr4"
                        android:layout_alignRight="@+id/gbr4"
                        android:layout_alignBottom="@+id/gbr4"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/mistral"
                        android:gravity="center"
                        android:text="GALERI"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ll1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/layout_bg">

                    <ImageView
                        android:id="@+id/gbr5"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="25dp"
                        android:src="@drawable/boss1" />

                    <TextView
                        android:id="@+id/myImageViewText4"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_alignLeft="@+id/gbr5"
                        android:layout_alignTop="@+id/gbr5"
                        android:layout_alignRight="@+id/gbr5"
                        android:layout_alignBottom="@+id/gbr5"
                        android:layout_marginTop="93dp"
                        android:layout_marginRight="0dp"
                        android:fontFamily="@font/mistral"
                        android:gravity="center"
                        android:text="KEPALA SEKOLAH"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/layout_bg">

                    <ImageView
                        android:id="@+id/gbr6"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="25dp"
                        android:src="@drawable/maintenance" />

                    <TextView
                        android:id="@+id/myImageViewText5"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/gbr6"
                        android:layout_alignTop="@+id/gbr6"
                        android:layout_alignRight="@+id/gbr6"
                        android:layout_alignBottom="@+id/gbr6"
                        android:layout_marginTop="94dp"
                        android:fontFamily="@font/mistral"
                        android:gravity="center"
                        android:text="FASILITAS"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/layout_bg">

                    <ImageView
                        android:id="@+id/gbr7"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingBottom="20dp"
                        android:src="@drawable/extracurricular1" />

                    <TextView
                        android:id="@+id/myImageViewText6"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/gbr7"
                        android:layout_alignTop="@+id/gbr7"
                        android:layout_alignRight="@+id/gbr7"
                        android:layout_alignBottom="@+id/gbr7"
                        android:layout_marginTop="94dp"
                        android:fontFamily="@font/mistral"
                        android:gravity="center"
                        android:text="EKSTRAKURIKULER"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
</ScrollView>
</RelativeLayout>